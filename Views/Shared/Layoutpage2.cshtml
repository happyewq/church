@{
	ViewBag.Title = "自訂的首頁";
}

<!DOCTYPE html>

<html>
	<head>
		<meta name="viewport" content="width=device-width"/>
		<title>@ViewBag.Title</title>
	</head>
	<body>
		<div>
			<header>
				@if(IsSectionDefined("header"))
				{
				@RenderSection("header")
				;
				}
				else
				{
					@:抱歉沒有設定header喔
				}
			</header>

			<article>
				@RenderBody()
			</article>

			<footer>

				@if(IsSectionDefined("footer"))
				{
					@RenderSection("footer");
				}
				else
				{
				@:抱歉沒有設定footer喔
				}
			</footer>
		</div>
	</body>
</html>